                    $('#mask').hide();
                    alertAction(status, response.errors[0].msg);
                    $('#activeDeviceModal').modal('hide');
                }
            }).catch((err) => {
                $('#mask').hide();
                alertAction(status, err);
            }).finally(() => {
                $('#mask').hide();
            })
        }

